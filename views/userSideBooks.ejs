

<%- include("partials/logoutHeader.ejs") -%>

<a href="/users/shopping">
  <button type="button" class="btn btn-primary mr-1 my-1">
    Home
  </button>
</a>

<div class="flex-card">
  <% books.filter(books =>{%>
  <div class="ui card">
    <div class="image">
      <img src="/images/<%= books.image%>" />
    </div>
    <div class="content">
      <a href="/users/shopping/bookDetail/<%= books.id%>" class="header">
        <%= books.title%>
      </a>
      <div class="meta">
        <span class="date"><%= books.authore%></span>
      </div>
      <div class="description">
        <%= books.detail%>
      </div>
    </div>
    <div class="extra content">
      <a>
        <i class="book icon"></i>
        <%= books.stock%>
      </a>
    </div>
  </div>
  <%})%>
</div>
